{% extends 'base.html.twig' %}

{% block title %}Vacation index{% endblock %}

{% block body %}
    <h1>Vacation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateHeureDebut</th>
                <th>DateHeureFin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vacation in vacations %}
            <tr>
                <td>{{ vacation.id }}</td>
                <td>{{ vacation.dateHeureDebut ? vacation.dateHeureDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ vacation.dateHeureFin ? vacation.dateHeureFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('vacation_show', {'id': vacation.id}) }}">show</a>
                    <a href="{{ path('vacation_edit', {'id': vacation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vacation_new') }}">Create new</a>
{% endblock %}
